<div class="flex flex-col">
  <div class="w-full">
    <div class="border-b border-gray-200 shadow">
      <table class="divide-y divide-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-2 text-xs text-gray-500">ID</th>
            <th class="px-6 py-2 text-xs text-gray-500">Item Name</th>
            <th class="px-6 py-2 text-xs text-gray-500">Partnumber</th>
            <th class="px-6 py-2 text-xs text-gray-500">Edit</th>
            <th class="px-6 py-2 text-xs text-gray-500">Delete</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-300">
          <% for (let i = 0; i < items.length; i++) { %>
          <tr class="whitespace-nowrap">
            <td class="px-6 py-4 text-sm text-gray-500"><%= i + 1 %></td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900"><%= items[i].item_name %></div>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-500">
                <%= items[i].partnumber %>
              </div>
            </td>
            <td class="px-6 py-4">
              <a
                href="#"
                class="px-4 py-1 text-sm text-indigo-600 bg-indigo-200 rounded-full"
                >Edit</a
              >
            </td>
            <td class="px-6 py-4">
              <a
                href="#"
                class="px-4 py-1 text-sm text-red-400 bg-red-200 rounded-full"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
